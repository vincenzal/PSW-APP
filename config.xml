    <icon src="res/icons/76.png" platform="ios" width="76" height="76"/>
	<icon src="res/icons/80.png" platform="ios" width="80" height="80"/>
    <icon src="res/icons/87.png" platform="ios" width="87" height="87"/>
    <icon src="res/icons/100.png" platform="ios" width="100" height="100"/>
    <icon src="res/icons/114.png" platform="ios" width="114" height="114"/>
