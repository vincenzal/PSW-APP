<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="at.patientenverwaltung.psw" version="0.9.5">
  <name>Patientenverwaltung</name>
  <description>Patienten Software Verwaltungstool</description>
  <author href="http://www.patientenverwaltung.at" email="office@patientenverwaltung.at">Patientenverwaltung Team</author>
  <content src="index.html"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="KeyboardDisplayRequiresUserAction" value="false" />
  
  <preference name="fullscreen" value="true" />
  <preference name="orientation" value="landscape" />
  
  <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.2"/>
  <plugin name="cordova-plugin-device" source="npm" spec="~1.1.1"/>
  <plugin name="cordova-plugin-file-transfer" source="npm" spec="~1.5.0"/>
  <plugin name="cordova-plugin-camera" source="npm" spec="~2.1.1"/>
  
  <icon src="images/icon.png"/>

  <platform name="ios">
    <icon src="res/icons/29.png" platform="ios" width="29" height="29"/>
    <icon src="res/icons/40.png" platform="ios" width="40" height="40"/>
    <icon src="res/icons/50.png" platform="ios" width="50" height="50"/>
    <icon src="res/icons/57.png" platform="ios" width="57" height="57"/>
